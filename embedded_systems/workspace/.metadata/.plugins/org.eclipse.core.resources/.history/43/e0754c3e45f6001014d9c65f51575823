#include <stdio.h>
#include "ES28.h"
#include "uart.h"

#define LOWERCASEU 117;
#define UPPERCASEU 85;

int main(void) {
	// Initialize the UART
	uart2_init();

	uint32_t counter = 0;
	uint8_t key_read;

	while(1) {
		// read keyboard press
		key_read = uart2_read();
		if ((key_read == LOWERCASEU) || (key_read == UPPERCASEU)) { // check if "u" or "U" read
			// increment and print
			counter++;
			printf("%d", (int)counter);
		} else if ((key_read == 68) || (key_read == 68)) { // check if "d" or "D" read
			// decrement and print
			counter--;
			printf("%d", (int)counter);
		}
	}
	return 0;
}
